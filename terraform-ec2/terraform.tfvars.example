# Copy this file to terraform.tfvars and fill in your values

aws_region   = "us-east-1"
environment  = "production"
project_name = "blog-v2"
domain_name  = "stevewanglog.com"

# Instance configuration
instance_type = "t4g.small"  # ARM-based, ~$12/month

# SSH key name (create this in AWS EC2 console first)
ssh_key_name = "blog-key"

# Sensitive variables - set via environment:
# export TF_VAR_db_password="your-secure-password"
# export TF_VAR_admin_api_key="your-api-key"
